    <script src="~/Scripts/angular/angular.min.js"></script>
    <script src="~/Scripts/angular/ng-app.js"></script>
    <script src="~/Scripts/angular/LogIn.js"></script>
</head>

<body class="off-canvas-sidebar" ng-app="PF" ng-controller="LogIn" ng-init="init()">

    <nav class="navbar navbar-primary navbar-transparent navbar-absolute">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="">Property Finder</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li class="">
                        <a href="" ng-click="gotToSignUpPage()">
                            <i class="material-icons">person_add</i>
                            Sign up
                        </a>
                    </li>
                    <li class="active">
                        <a href="">
                            <i class="material-icons">fingerprint</i>
                            Login
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <style>
        #accountInfo {
            color: black;
        }

        #accountInfo:hover {
            color: #00bcd4;
            text-decoration: underline;
        }
    </style>

    <div class="wrapper wrapper-full-page">
        <div class="full-page login-page" filter-color="black" data-image="../img/realestate.jpg">
            <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                            <form method="post" action="../Account/auth" @*ng-submit="LogIn()"*@ autocomplete="off">
                                <div class="card card-login">
                                    @*<div class="card-header text-center">
                                            <h4 class="card-title">Login</h4>
                                        </div>*@
                                    <div class="text-center" style="margin-top: 25px">
                                        <h2 class="card-title">Login</h2>
                                    </div>
                                    <p class="category text-center" style="margin-bottom: 20px">
                                        Enter your credentials below
                                    </p>
                                    @*<p class="category text-center" ng-if="result == 3" style="color:red">
                                            *Credentials not match
                                        </p>
                                        <p class="category text-center" ng-if="result == 2" style="color:red">
                                            *Your account is blocked
                                        </p>
                                        <p class="category text-center text-info" ng-if="result == 0 || result == 1" >
                                            Welcome
                                        </p>*@
                                    <div class="card-content" style="margin-bottom: 20px">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">face</i>
                                            </span>

                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Username</label>
                                                <input name="Username" ng-model="user.Username" type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>


                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Password</label>
                                                <input name="Password" ng-model="user.Password" type="password" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center" style="margin-bottom: 20px">
                                        <a id="accountInfo" href="../Account/Signup">Doesn't have an account?</a>
                                    </div>
                                    <div class="footer text-center">
                                        <button type="submit" class="btn btn-success btn-round">Let's go</button>

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer"></footer>


        </div>

    </div>


</body>

