@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

    <style>
        .picture {
            width: 100% !important;
            height: 230px !important;
            border-radius: 0 !important;
        }
    </style>

<div class="col-sm-6 col-sm-offset-3">
    <!--      Wizard container        -->
    <div class="wizard-container">
        <div class="card wizard-card active" data-color="rose" id="wizardProfile">
            <form name="registrationForm" ng-submit="finish()" method="post" novalidate="novalidate">
                <!--        You can switch " data-color="purple" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
                <div class="wizard-header">
                    <h3 class="wizard-title">
                        Build Your Profile
                    </h3>
                    <h5>This information will let us know more about you.</h5>
                </div>
                <div class="wizard-navigation">
                    <ul class="nav nav-pills">
                        <li class="active" style="width: 33.3333%;"><a href="#about" data-toggle="tab">Personal Info</a></li>
                        <li style="width: 33.3333%;"><a href="#verification" data-toggle="tab">Photo</a></li>
                    </ul>
                    <div class="moving-tab" style="width: 251.333px; transform: translate3d(-8px, 0px, 0px); transition: all 0.5s cubic-bezier(0.29, 1.42, 0.79, 1) 0s;">About</div>
                </div>

                <div class="tab-content">
                    <div class="tab-pane active" id="about">
                        <div class="row">
                            <h4 class="info-text"> Let's start with the basic information</h4>

                            <div class="col-sm-10 col-sm-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="material-icons">face</i>
                                    </span>
                                    <div class="form-group label-floating is-empty ">
                                        <label class="control-label">First Name <small>(required)</small></label>
                                        <input name="firstname" ng-model="register.Firstname" type="text" class="form-control error" aria-required="true">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="material-icons">face</i>
                                    </span>
                                    <div class="form-group label-floating is-empty ">
                                        <label class="control-label">Middle Name <small>(required)</small></label>
                                        <input name="middlename" ng-model="register.Middlename" type="text" class="form-control error" aria-required="true">
                                        <span class="material-input"></span>
                                    </div>
                                </div>

                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="material-icons">face</i>
                                    </span>
                                    <div class="form-group label-floating is-empty ">
                                        <label class="control-label">Last Name <small>(required)</small></label>
                                        <input name="lastname" ng-model="register.Lastname" type="text" class="form-control error" aria-required="true">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="material-icons">place</i>
                                    </span>
                                    <div class="form-group label-floating is-empty">
                                        <label class="control-label">Address <small>(required)</small></label>
                                        <input name="address" ng-model="register.Address" type="text" class="form-control error" aria-required="true">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="material-icons">calendar_today</i>
                                    </span>
                                    <div class="form-group label-floating is-empty is-focused">
                                        <label class="control-label">Birthdate <small>(required)</small></label>
                                        <input name="Birthdate" ng-model="register.Birthdate" type="date" class="form-control error" aria-required="true">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="material-icons">phone</i>
                                    </span>
                                    <div class="form-group label-floating is-empty ">
                                        <label class="control-label">Contact Number <small>(required)</small></label>
                                        <input name="contactno" ng-model="register.ContactNo" type="text" class="form-control error" aria-required="true">
                                        <span class="material-input"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="verification">
                        <h4 class="info-text"> Identification Card</h4>
                        <div class="col-sm-12" ng-show="capture">
                            <div class="caption text-center">
                                <h6 class="text-semibold no-margin">Take/Upload a Photo <small class="display-block" id="hovtosee">Hover on photo to see options</small></h6>
                                <div class="video-wrap">
                                    <video style="width: 100%; " id="video" playsinline autoplay></video>
                                </div>
                                <!-- Trigger canvas web API -->
                                <div class="controller">
                                    <button class="btn btn-primary" type="button" id="snap" style="display: none;" data-toggle="modal" data-target="#modal_default">Capture</button>
                                </div>
                                <!-- Webcam video snapshot -->
                                <canvas style="display: none;" id="canvas" width="640" height="480"></canvas>
                                <div id="percentStatus"></div>
                                <progress id="fileProgress" style="display: none; width: 100%;"></progress>
                            </div>
                        </div>
                        <div class="col-sm-6" ng-hide="capture">
                            <div class="picture-container">
                                <div class="picture">
                                    <img src="../../assets/img/default-avatar.png" class="picture-src" id="frontPreview" title="">
                                    <input name="front" type="file" id="front-picture">
                                </div>
                                <h6>Front</h6>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon" style="cursor: pointer" title="e.g Driver's License">
                                    <i class="material-icons">info</i>
                                </span>
                                <div class="form-group label-floating">
                                    <label class="control-label">Photo Description <small>(required)</small></label>
                                    <input name="prod1" ng-model="register.prodDescription1" type="text" class="form-control" autocomplete="off">
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" ng-hide="capture" style="border-left: 1px solid #eee">
                            <div class="picture-container">
                                <div class="picture">
                                    <img src="../../assets/img/default-avatar.png" class="picture-src" id="backPreview" title="">
                                    <input name="back" type="file" id="back-picture">
                                </div>
                                <h6>Back</h6>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon" style="cursor: pointer" title="e.g Driver's License">
                                    <i class="material-icons">info</i>
                                </span>
                                <div class="form-group label-floating">
                                    <label class="control-label">Photo Description  <small>(required)</small></label>
                                    <input name="prod2" ng-model="register.prodDescription2" type="text" class="form-control" autocomplete="off">
                                    <span class="material-input"></span>
                                    <span class="material-input"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="wizard-footer">
                    <div class="pull-right">
                        <input type="button" class="btn btn-next btn-fill btn-rose btn-wd" name="next" value="Next">
                        <button type="submit" ng-disabled="registrationForm.$invalid" class="btn btn-finish btn-fill btn-rose btn-wd" name="finish" style="display: none;">Finish</button>
                    </div>

                    <div class="pull-left">
                        <input type="button" class="btn btn-previous btn-fill btn-default btn-wd disabled" name="previous" value="Previous">
                    </div>
                    <div class="clearfix"></div>
                </div>
            </form>
        </div>
    </div> <!-- wizard container -->
</div>
